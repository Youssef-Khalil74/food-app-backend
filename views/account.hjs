<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account - On-Time</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/style.css">
    <style>
        .info-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 0;
            border-bottom: 1px solid var(--border-light);
        }
        .info-row:last-child {
            border-bottom: none;
        }
        .info-label {
            font-weight: 500;
            color: var(--text-muted);
            font-size: 0.9rem;
        }
        .info-value {
            font-weight: 600;
            color: var(--text-dark);
        }
        .info-value input {
            text-align: right;
            border: none;
            background: var(--secondary-cream);
            padding: 8px 12px;
            border-radius: var(--radius-sm);
            font-weight: 600;
        }
        .info-value input:focus {
            outline: 2px solid var(--primary-maroon);
            background: white;
        }
        .edit-mode .info-value input {
            background: white;
            border: 2px solid var(--border-light);
        }
        .btn-edit {
            padding: 6px 16px;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <!-- Navbar (Dynamic based on role) -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand" id="brandLink" href="#" onclick="goToDashboard(); return false;">
                <span class="logo-icon">‚è±Ô∏è</span>
                On-Time
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto" id="mainNav">
                    <!-- Will be populated by JavaScript based on role -->
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item" id="cartNavItem" style="display: none;">
                        <a class="nav-link btn-cart" href="/cart">
                            üõí
                            <span class="cart-badge" id="cartCount">0</span>
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link btn-account active" href="/account">
                            üë§ Account
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link btn-logout" href="#" onclick="logout()">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Page Header -->
    <div class="dashboard-header">
        <div class="container">
            <h1>My Account üë§</h1>
            <p>Manage your profile and settings</p>
        </div>
    </div>
    
    <div class="page-container">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-lg-4 mb-4">
                <div class="card account-card">
                    <div class="card-body text-center">
                        <div class="account-avatar">
                            <span id="userInitial">?</span>
                        </div>
                        <h3 id="displayName">Loading...</h3>
                        <p class="text-muted" id="displayEmail">...</p>
                        <span class="badge bg-maroon" id="displayRole">User</span>
                        
                        <div class="account-stats mt-4" id="statsSection">
                            <div class="stat">
                                <div class="stat-value" id="totalOrders">0</div>
                                <div class="stat-label" id="ordersLabel">Orders</div>
                            </div>
                            <div class="stat">
                                <div class="stat-value" id="totalMoney">EGP 0</div>
                                <div class="stat-label" id="moneyLabel">Total</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Personal Info Section -->
            <div class="col-lg-8">
                <!-- Alert Messages -->
                <div id="alertContainer"></div>
                
                <!-- Personal Information Card -->
                <div class="card mb-4" id="personalInfoCard">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">üìù Personal Information</h5>
                        <button type="button" class="btn btn-outline-primary btn-edit" id="editBtn" onclick="toggleEditMode()">
                            ‚úèÔ∏è Edit
                        </button>
                    </div>
                    <div class="card-body">
                        <form id="profileForm">
                            <div class="info-row">
                                <span class="info-label">Full Name</span>
                                <span class="info-value">
                                    <input type="text" id="editName" disabled>
                                </span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Email</span>
                                <span class="info-value">
                                    <input type="email" id="editEmail" disabled>
                                </span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Birth Date</span>
                                <span class="info-value">
                                    <input type="date" id="editBirthDate" disabled>
                                </span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Password</span>
                                <span class="info-value">
                                    <input type="password" id="editPassword" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" disabled>
                                </span>
                            </div>
                            
                            <div class="info-row">
                                <span class="info-label">Member Since</span>
                                <span class="info-value">
                                    <span id="memberSince">-</span>
                                </span>
                            </div>
                            
                            <!-- Save/Cancel buttons (hidden by default) -->
                            <div id="editActions" style="display: none;" class="mt-4 d-flex gap-2 justify-content-end">
                                <button type="button" class="btn btn-secondary" onclick="cancelEdit()">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Danger Zone -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">‚ö†Ô∏è Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Once you delete your account, there is no going back. Please be certain.</p>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            Delete My Account
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Delete Account Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">‚ö†Ô∏è Delete Account</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete your account? This action cannot be undone.</p>
                    <form id="deleteForm">
                        <div class="mb-3">
                            <label class="form-label">Enter your password to confirm</label>
                            <input type="password" class="form-control" id="deletePassword" placeholder="Password" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Type <strong>DELETE</strong> to confirm</label>
                            <input type="text" class="form-control" id="deleteConfirm" placeholder="DELETE" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="deleteAccount()">Delete Forever</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/src/roleGuard.js"></script>
    <script>
        // Account page is accessible by all authenticated users
        if (!requireAuth()) {
            document.body.style.display = 'none';
        }
        
        // Navigate to correct dashboard based on stored role
        function goToDashboard() {
            // First try to get role from server via API
            var token = sessionStorage.getItem('token');
            if (!token) {
                window.location.href = '/';
                return;
            }
            
            // Make sync request to get user role
            $.ajax({
                url: '/api/v1/account',
                method: 'GET',
                async: false, // Sync to ensure we get the role before navigating
                headers: { 'Authorization': 'Bearer ' + token },
                success: function(data) {
                    // Update sessionStorage with server data
                    sessionStorage.setItem('user', JSON.stringify({
                        userId: data.userId,
                        name: data.name,
                        email: data.email,
                        role: data.role
                    }));
                    
                    // Navigate based on server-confirmed role
                    if (data.role === 'admin') {
                        window.location.href = '/adminDashboard';
                    } else if (data.role === 'truckOwner') {
                        window.location.href = '/ownerDashboard';
                    } else {
                        window.location.href = '/dashboard';
                    }
                },
                error: function() {
                    // Fallback to sessionStorage role
                    var user = JSON.parse(sessionStorage.getItem('user') || '{}');
                    if (user.role === 'admin') {
                        window.location.href = '/adminDashboard';
                    } else if (user.role === 'truckOwner') {
                        window.location.href = '/ownerDashboard';
                    } else {
                        window.location.href = '/dashboard';
                    }
                }
            });
        }
        
        function logout() {
            sessionStorage.clear();
            $.ajax({
                url: '/api/v1/account/logout',
                method: 'POST',
                success: function() { window.location.href = '/'; },
                error: function() { window.location.href = '/'; }
            });
        }
    </script>
    <script src="/src/account.js"></script>
</body>
</html>
