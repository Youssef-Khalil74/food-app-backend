<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Dashboard - On-Time</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand" href="/ownerDashboard">
                <span class="logo-icon">‚è±Ô∏è</span>
                On-Time
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/ownerDashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/menuItems">Menu Items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/truckOrders">Orders</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item ms-2">
                        <a class="nav-link btn-account" href="/account">
                            üë§ Account
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-logout" href="#" onclick="logout()">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 id="truckName">My Truck</h1>
                    <p class="mb-0">
                        Status: <span class="badge bg-light text-dark" id="truckStatus">Loading...</span>
                    </p>
                </div>
                <div>
                    <select class="form-select" id="orderStatusToggle" style="width: auto;">
                        <option value="available">Accepting Orders</option>
                        <option value="busy">Not Accepting</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    
    <div class="page-container">
        <div id="alertContainer"></div>
        
        <!-- Stats Card - Just Pending Orders -->
        <div class="row mb-4 justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="stat-card">
                    <div class="icon">‚è≥</div>
                    <div class="value" id="pendingOrdersCount">0</div>
                    <div class="label">Pending Orders</div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="quick-actions section-spacing">
            <a href="/addMenuItem" class="quick-action-card">
                <div class="icon">‚ûï</div>
                <h3>Add Menu Item</h3>
                <p>Add new items to your menu</p>
            </a>
            <a href="/menuItems" class="quick-action-card">
                <div class="icon">üìã</div>
                <h3>Manage Menu</h3>
                <p>View and edit menu items</p>
            </a>
            <a href="/truckOrders" class="quick-action-card">
                <div class="icon">üì¶</div>
                <h3>View Orders</h3>
                <p>Manage incoming orders</p>
            </a>
        </div>
        
        <!-- Recent Orders -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="mb-0">üì¶ Recent Orders</h3>
                <a href="/truckOrders" class="btn btn-outline-primary btn-sm">View All</a>
            </div>
            <div class="card-body">
                <div id="recentOrdersContainer">
                    <div class="text-center py-4" id="ordersLoading">
                        <div class="spinner-border text-secondary" role="status"></div>
                    </div>
                </div>
                <div id="noOrders" class="text-center py-4" style="display: none;">
                    <p class="text-muted mb-0">No recent orders</p>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/src/roleGuard.js"></script>
    <script>
        if (!checkRole(['truckOwner'])) {
            document.body.style.display = 'none';
        }
        
        function logout() {
            sessionStorage.removeItem('token');
            sessionStorage.removeItem('user');
            $.ajax({
                url: '/api/v1/account/logout',
                method: 'POST',
                success: function() { window.location.href = '/'; },
                error: function() { window.location.href = '/'; }
            });
        }
    </script>
    <script src="/src/ownerDashboard.js"></script>
</body>
</html>
