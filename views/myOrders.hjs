<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - On-Time</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <span class="logo-icon">‚è±Ô∏è</span>
                On-Time
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/trucks">Browse Trucks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/myOrders">My Orders</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn-cart" href="/cart">
                            üõí
                            <span class="cart-badge" id="cartCount">0</span>
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link btn-account" href="/account">
                            üë§ Account
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link btn-logout" href="#" onclick="logout()">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="page-container">
        <h1 class="section-title mb-4">
            <span class="icon">üìã</span>
            My Orders
        </h1>
        
        <div id="alertContainer"></div>
        
        <!-- Filter Tabs -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex gap-2 flex-wrap">
                    <button class="btn btn-primary btn-sm status-filter active" data-status="">All Orders</button>
                    <button class="btn btn-outline-primary btn-sm status-filter" data-status="pending">Pending</button>
                    <button class="btn btn-outline-primary btn-sm status-filter" data-status="confirmed">Confirmed</button>
                    <button class="btn btn-outline-primary btn-sm status-filter" data-status="preparing">Preparing</button>
                    <button class="btn btn-outline-primary btn-sm status-filter" data-status="ready">Ready</button>
                    <button class="btn btn-outline-primary btn-sm status-filter" data-status="completed">Completed</button>
                </div>
            </div>
        </div>
        
        <!-- Orders List -->
        <div id="ordersContainer">
            <div class="text-center py-5" id="ordersLoading">
                <div class="spinner-border text-secondary" role="status"></div>
                <p class="mt-2 text-muted">Loading orders...</p>
            </div>
        </div>
        
        <div id="noOrders" class="empty-state" style="display: none;">
            <div class="icon">üìã</div>
            <h3>No orders yet</h3>
            <p>You haven't placed any orders yet.</p>
            <a href="/trucks" class="btn btn-primary">Start Ordering</a>
        </div>
    </div>
    
    <!-- Order Details Modal -->
    <div class="modal fade" id="orderDetailsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Order Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="orderDetailsContent">
                    <div class="text-center py-4">
                        <div class="spinner-border text-secondary" role="status"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/src/roleGuard.js"></script>
    <script>
        if (!checkRole(['customer'])) {
            document.body.style.display = 'none';
        }
        
        function logout() {
            sessionStorage.removeItem('token');
            sessionStorage.removeItem('user');
            $.ajax({
                url: '/api/v1/account/logout',
                method: 'POST',
                success: function() { window.location.href = '/'; },
                error: function() { window.location.href = '/'; }
            });
        }
    </script>
    <script src="/src/myOrders.js"></script>
</body>
</html>
